{
	"AllowedHosts": "*",
	"Jwt": {
		"AccessTokenLifetime": "00:10",
		"RefreshTokenLifetime": "30.00:00"
	},
	"ConnectionStrings": {
		"LocalSqlServer": "Server=(localdb)\\MSSQLLocalDB;Database=LocalDB1;Trusted_Connection=True;MultipleActiveResultSets=true",
		"MemorySqlite": "Data Source=:memory:;Version=3;New=True;"
	},
	"Hashids": {
		"Alphabet": "ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890",
		"Steps": "CFHISTU"
	},
	"Identity": {
		"User": {
			"AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-.'",
			"RequireUniqueEmail": false
		},
		"Password": {
			"RequiredLength": 6,
			"RequiredUniqueChars": 3,
			"RequireNonAlphanumeric": true,
			"RequireLowercase": true,
			"RequireUppercase": true,
			"RequireDigit": true
		},
		"SignIn": {
			"RequireConfirmedEmail": false
		}
	},
	"Swagger": {
		"Enabled": false,
		"Title": "Clean Template API",
		"Description": "readme.md",
		"IncludeComments": [
			"CleanTemplate.Web.Api.xml",
			"CleanTemplate.Application.xml"
		]
	}
}
